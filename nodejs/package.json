{
  "name": "@relaycc/xmtp-bridge",
  "version": "0.0.1",
  "description": "An XMTP adapter for HTTP APIs.",
  "type": "module",
  "engines": {
    "node": ">=18.15.0"
  },
  "scripts": {
    "dev:tsc": "tsc --watch",
    "dev:bridge": ". ../shell/env.sh && nodemon build/src/apps/bridge.js",
    "dev:api": ". ../shell/env.sh && nodemon build/src/apps/api.js",
    "dev:canary": ". ../shell/env.sh && nodemon build/src/apps/canary.js",
    "dev:up": ". ../shell/env.sh && docker compose -f ../docker/docker-compose.yml up -d --build",
    "dev:down": "docker compose -f ../docker/docker-compose.yml down",
    "prod:up": "../shell/bridge.deploy.sh",
    "test:e2e": ". ../shell/env.sh && mocha",
    "test:dev": ". ../shell/env.sh && mocha",
    "test:bench": ". ../shell/env.sh && mocha",
    "static:build": "tsc",
    "lint": "eslint .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier . --write",
    "typecheck": "tsc --emitDeclarationOnly false --noEmit",
    "sanity": "npm run lint && npm run prettier && npm run typecheck && npm run build",
    "patch": "npm version patch -m 'patch: Bump version to %s'",
    "pub": "npm run sanity && npm run patch && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/relaycc/xmtp-bridge.git"
  },
  "author": "relay.cc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/relaycc/xmtp-bridge/issues"
  },
  "homepage": "https://github.com/relaycc/xmtp-bridge#README.md",
  "devDependencies": {
    "@ethersproject/wallet": "^5.7.0",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "^4.16.1",
    "@sentry/node": "^7.54.0",
    "@xmtp/xmtp-js": "^9.0.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.1",
    "prisma": "^4.16.1",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  }
}
