datasource db {
  provider = "postgresql"
  url      = env("PG_CONNECTION_STRING")
}

generator client {
  provider = "prisma-client-js"
}

model Bridge {
  id         String    @id @default(uuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  ethAddress String    @unique
  bootKey    String
  hookToken  String
  httpUrl    String
  instance   Instance?
}

model Instance {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  bridge    Bridge   @relation(fields: [bridgeId], references: [id])
  bridgeId  String   @unique
  heartbeat DateTime @default(now())
}
